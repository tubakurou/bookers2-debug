    <% if book.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(book), data: {"turbolinks" => false}, method: :delete do %>
        ♥<%= book.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(book), data: {"turbolinks" => false}, method: :post do %>
        ♡<%= book.favorites.count %> いいね
      <% end %>
    </p>
    <% end %>